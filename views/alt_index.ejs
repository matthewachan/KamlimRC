<!doctype html>
<html lang='kr'>
	<head>
		<title>Kamlim Retreat Center</title>
		<meta charset='utf-8'/>
		<!-- Website description -->
		<meta name='description' content='Kamlim Retreat Center offers a comfortable location for religious retreats near Perris, California.'/>
		<meta name='author' content='Matthew Chan'/>
		<meta name='keywords' content='kamlim, retreat, center, korean, christian, church, california'/>
		<meta http-equiv='X-UA-Compatible' content='IE=edge'/>
		<!-- Bootstrap CSS -->
		<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css' type='text/css'/>
		<!-- Custom CSS styles -->
		<link rel='stylesheet' href='../stylesheets/style.css' type='text/css'/>
		<!-- Lato font -->
		<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:100,200,300,400,700,900' type='text/css'/>

		<!-- jQuery -->
		<script src='../javascripts/jquery.min.js' type='text/javascript'></script>
		<!-- Bootstrap JS -->
		<script src='../javascripts/bootstrap.min.js' type='text/javascript'></script>
		<!-- AngularJS -->
		<script src='../javascripts/angular.min.js' type='text/javascript'></script>
		<!-- AngularJS UI Router -->
		<script src='../javascripts/angular-ui-router.min.js' type='text/javascript'></script>
		<!-- AngularJS Sanitize -->
		<script src='../javascripts/angular-sanitize.min.js' type='text/javascript'></script>
		<!-- Custom Angular Application -->
		<script src='../javascripts/kamlimApp.js' type='text/javascript'></script>
	</head>

	<body ng-app='kamlimApp'>

		<div class='container'>
			<div class='row'>
				<div class='col-md-8 col-md-offset-2'>

					<!-- Page header -->
					<header ng-controller='HomeCtrl'>
						<a href='/'><h1 style='font-size:58px; margin-top: 44px;' class='text-uppercase text-center'><strong>Kamlim Retreat Center</strong></h1>
						<h2 style='margin-top: -8px' class='text-center'><strong>감림산 수양관</strong></h2></a>


						<!-- Navigation Menu -->
						<nav class='navbar col-md-10 col-md-offset-2'>
							<div class='container-fluid'>
								<ul class='nav navbar-nav'>

									<li class='dropdown' ng-repeat='topic in topics | orderBy: "title"'><a class='dropdown-toggle' data-toggle='dropdown' href=''>{{topic.alt_title}}<span class='caret'></span></a>
										<ul  class='dropdown-menu'>
											<li ng-repeat='subtopic in subtopics' ng-show='subtopic.topic == topic._id'><a href='#/kr/subtopics/{{$index}}'>{{subtopic.alt_title}}</a></li>
										</ul>
									</li>
								</ul>
							</div>
						</nav>	
					</header>

				</div>
		
				<!-- INJECT TEMPLATE HERE -->
				<div ui-view></div>


				
			</div>
			<!-- Footer --> 
			<footer class='row footer'>
				<div class='col-md-12' style='background: #AEAEAE'> 
					<!-- Contact info -->
						<div class='col-md-3'>
							<h3>Korean Contact Us</h3>
							<address>
								24101 Christmas Tree Ln<br/>
								Perris, California 92570<br/>
								Phone: 951.943.4207
							</address>
						</div>
				</div>
				<!-- Copyright -->
				<div class='col-md-12' style='padding-top: 11px; padding-bottom: 11px; color: #E8E8E8; background: #454545'>
					<cite class='col-md-3'>
						&copy;&nbsp;Kamlim 2016
					</cite>
				</div>
			</footer>
		</div>
		
	</body>

</html>